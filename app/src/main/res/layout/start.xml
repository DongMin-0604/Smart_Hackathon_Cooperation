<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    tools:context=".StartActivity">

    <!--시작 화면(시,구,요일정보 입력 받는 창)  -->

    <ImageView
        android:id="@+id/Start_Title"
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:gravity="center"
        android:src="@drawable/logo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/Start_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/imcresoojin"
        android:gravity="center"
        android:text="분리수거 알림을 위한 지역, 배출 요일 정보를 입력해주세요. \n*앱 최초실행시에만 뜨는 창입니다.*"
        android:textColor="#000000"
        android:textSize="40px"
        android:textStyle="normal|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_main_bt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#3f962c "
        android:text="다음으로"
        android:fontFamily="@font/wemakeprice_semibold"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:theme="@style/BlueRipple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/dropdown_spinner"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/spinner_background"
        android:dropDownWidth="150dp"
        android:entries="@array/CityDropDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Spinner
        android:id="@+id/dropdown_country"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/CountryDropDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <Spinner
        android:id="@+id/dropdown_town"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/TownDropDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />

    <TextView
        android:id="@+id/town_info"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="동 : "
        android:fontFamily="@font/wemakeprice_semibold"
        android:textColor="#000000"
        android:textSize="55px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />

    <TextView
        android:id="@+id/country_info"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="군/구 : "
        android:fontFamily="@font/wemakeprice_semibold"
        android:textColor="#000000"
        android:textSize="55px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <TextView
        android:id="@+id/city_info"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="시/도 : "
        android:fontFamily="@font/wemakeprice_semibold"
        android:textColor="#000000"
        android:textSize="55px"
        android:textStyle=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285">

        <TextView
            android:id="@+id/city_temp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:width="250px"
            android:gravity="center"
            android:text="--시"
            android:fontFamily="@font/wemakeprice_semibold"
            android:textColor="@color/white"
            android:textSize="44px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="40px" />

        <TextView
            android:id="@+id/country_temp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:width="250px"
            android:gravity="center"
            android:text="--구"
            android:fontFamily="@font/wemakeprice_semibold"
            android:textColor="@color/white"
            android:textSize="44px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="40px" />

        <TextView
            android:id="@+id/town_temp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:width="250px"
            android:gravity="center"
            android:text="--동"
            android:fontFamily="@font/wemakeprice_semibold"
            android:textColor="@color/white"
            android:textSize="44px"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 분리수거 요일을 선택해 주세요."
        android:fontFamily="@font/imcresoojin"
        android:textColor="@color/black"
        android:textSize="44px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="130px"
        android:layout_height="wrap_content"
        android:background="@drawable/toggle_bt_background"
        android:layout_marginLeft="10px"
        android:textOff="월"
        android:textOn="월"
        android:fontFamily="@font/wemakeprice_regular"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="130px"
        android:background="@drawable/toggle_bt_background"
        android:layout_height="wrap_content"
        android:textOff="화"
        android:textOn="화"
        android:fontFamily="@font/wemakeprice_regular"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="130px"
        android:background="@drawable/toggle_bt_background"
        android:layout_height="wrap_content"
        android:textOff="수"
        android:textOn="수"
        android:textColor="@color/black"
        android:fontFamily="@font/wemakeprice_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="130px"
        android:background="@drawable/toggle_bt_background"
        android:layout_height="wrap_content"
        android:textOff="목"
        android:textOn="목"
        android:textColor="@color/black"
        android:fontFamily="@font/wemakeprice_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="130px"
        android:background="@drawable/toggle_bt_background"
        android:layout_height="wrap_content"
        android:textOff="금"
        android:textOn="금"
        android:textColor="@color/black"
        android:fontFamily="@font/wemakeprice_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="130px"
        android:background="@drawable/toggle_bt_background"
        android:layout_height="wrap_content"
        android:textOff="토"
        android:textOn="토"
        android:textColor="@color/black"
        android:fontFamily="@font/wemakeprice_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="130px"
        android:background="@drawable/toggle_bt_background"
        android:layout_height="wrap_content"
        android:textOff="일"
        android:textOn="일"
        android:textColor="@color/black"
        android:fontFamily="@font/wemakeprice_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />



</androidx.constraintlayout.widget.ConstraintLayout>
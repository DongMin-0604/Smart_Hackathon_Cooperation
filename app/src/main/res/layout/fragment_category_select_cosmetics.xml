<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8cc54a ">


    <ScrollView
        android:id="@+id/Scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_back"
                android:layout_width="72dp"
                android:layout_height="82px"
                android:layout_marginTop="17dp"
                android:layout_marginRight="155dp"
                android:background="@drawable/back_bt_background"
                android:fontFamily="@font/wemakeprice_regular"
                android:gravity="center"
                android:text="&lt; BACK"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:gravity="center"
                android:text="화장품"
                android:textColor="#000000"
                android:textSize="75px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="분리배출 여부"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="60px"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="재활용,일반쓰레기"
                android:textStyle="bold"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="#4F3C97"
                android:textAlignment="center"
                android:textSize="73px"
                />

            <TextView
                android:id="@+id/info_tv"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:padding="5px"
                android:text="화장품은 내부의 내용물을 일반쓰레기로 처리한 후 용기는 제품에따라 플라스틱,유리,튜브 등등 재질이 다르기 때문에 재질에 맞게 분리수거해야 합니다."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="56px"
                />
            <TextView
                android:id="@+id/warning_tv2"
                android:layout_marginTop="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:text="※주의사항※\n화장품 안에 내용물은 화학물질이기 때문에 물에 흘려보내면 안됩니다."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="50px"
                />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
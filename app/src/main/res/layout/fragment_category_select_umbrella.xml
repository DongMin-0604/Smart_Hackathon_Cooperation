<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8cc54a ">


    <ScrollView
        android:id="@+id/Scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_back"
                android:layout_width="72dp"
                android:layout_height="82px"
                android:layout_marginTop="17dp"
                android:layout_marginRight="155dp"
                android:background="@drawable/back_bt_background"
                android:fontFamily="@font/wemakeprice_regular"
                android:gravity="center"
                android:text="&lt; BACK"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:gravity="center"
                android:text="우산"
                android:textColor="#000000"
                android:textSize="75px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/wemakeprice_semibold"
                android:text="분리배출 여부"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="60px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/wemakeprice_semibold"
                android:text="일반쓰레기,재활용"
                android:textAlignment="center"
                android:textColor="#4F3C97"
                android:textSize="73px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:bufferType="spannable"
                android:fontFamily="@font/wemakeprice_semibold"
                android:padding="5px"
                android:text="우산은 우산살과 나머지로 이루어져 있어 우산살은 고철,나머지는 플라스틱 및 일반쓰레기로 분리배출 해야 합니다."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="56px" />

            <TextView
                android:id="@+id/warning_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:bufferType="spannable"
                android:fontFamily="@font/wemakeprice_semibold"
                android:text="※주의사항※\n우산을 배출하실땐 재활용품 수거 하시는 분들이\n 다칠 우려가 있으니 우산대를 묶어 고정하신 후 배출해주세요."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50px" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_shellfish_category">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_back"
            android:layout_width="72dp"
            android:layout_height="82px"
            android:background="@drawable/back_bt_background"
            android:fontFamily="@font/wemakeprice_regular"
            android:textSize="40px"
            android:gravity="center"
            android:text="&lt; BACK"
            android:layout_marginTop="20dp"
            android:layout_marginRight="150dp"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아래에 카테고리를 선택해주세요"
            android:background="#3f962c"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="55px"
            android:layout_marginTop="25dp"
            android:textStyle="bold|italic"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:padding="4dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/egg_bt"
            android:text="달걀"
            android:textSize="50px"
            android:fontFamily="@font/wemakeprice_semibold"
            android:textStyle="bold"
            android:background="@drawable/category_bt_back"
            android:drawableTop="@drawable/egg2"
            android:layout_marginRight="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/born_bt"
            android:text="동물 뼈"
            android:textSize="50px"
            android:fontFamily="@font/wemakeprice_semibold"
            android:textStyle="bold"
            android:background="@drawable/category_bt_back"
            android:drawableTop="@drawable/born"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/fat_bt"
                android:text="내장,비계"
                android:textSize="50px"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textStyle="bold"
                android:background="@drawable/category_bt_back"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/meat_other"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/sal_ko_gi_bt"
                android:text="살코기"
                android:textSize="50px"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textStyle="bold"
                android:background="@drawable/category_bt_back"
                android:drawableTop="@drawable/meat2"
                />
        </LinearLayout>
 </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8cc54a ">


    <ScrollView
        android:id="@+id/Scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_back"
                android:layout_width="72dp"
                android:layout_height="82px"
                android:layout_marginTop="17dp"
                android:layout_marginRight="155dp"
                android:background="@drawable/back_bt_background"
                android:fontFamily="@font/wemakeprice_regular"
                android:gravity="center"
                android:text="&lt; BACK"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:gravity="center"
                android:text="커피포트"
                android:textColor="#000000"
                android:textSize="75px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="분리배출 여부"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="60px"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="재활용"
                android:textStyle="bold"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="#4F3C97"
                android:textAlignment="center"
                android:textSize="73px"
                />

            <TextView
                android:id="@+id/info_tv"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:padding="5px"
                android:text="캔류를 배출할때는 납작하게 부피를 줄여 배출하는 것을 권장하며 라벨,스티커 등이 붙어있는 경우 깨끗하게 떼어낸 후 버려야합니다."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="56px"
                />
            <TextView
                android:id="@+id/warning_tv2"
                android:layout_marginTop="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:text="※주의사항※\n캔류의 수거 장소가 종류의 따라 나눠져 있으면\n캔류(알미늄),캔류(철)로 분리배출해야합니다."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="50px"
                />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
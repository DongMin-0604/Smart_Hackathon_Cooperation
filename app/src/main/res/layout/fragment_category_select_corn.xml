<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8cc54a ">


    <ScrollView
        android:id="@+id/Scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="63dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_back"
                android:layout_width="72dp"
                android:layout_height="82px"
                android:layout_marginTop="17dp"
                android:layout_marginRight="155dp"
                android:background="@drawable/back_bt_background"
                android:fontFamily="@font/wemakeprice_regular"
                android:gravity="center"
                android:text="&lt; BACK"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:gravity="center"
                android:text="옥수수껍질"
                android:textColor="#000000"
                android:textSize="75px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="분리배출 여부"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="60px"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="재활용"
                android:textStyle="bold"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="#4F3C97"
                android:textAlignment="center"
                android:textSize="73px"
                />

            <TextView
                android:id="@+id/info_tv"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:padding="5px"
                android:text="내부의 남은 가스를 거꾸로 노즐을 눌러주거나 용기 아래쪽에 송곳 등으로 구멍을 내서 완전히 비우고 플라스틱 뚜껑 등 다른 재질은 분리해서 배출해야합니다."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="56px"
                />
            <TextView
                android:id="@+id/warning_tv2"
                android:layout_marginTop="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:text="※주의사항※\n남은 가스를 배출할 때엔 실외, 베란다 등 반드시 통풍이 잘되는 장소에서 해야합니다."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="50px"
                />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
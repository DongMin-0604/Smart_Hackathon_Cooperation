<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8cc54a ">


    <ScrollView
        android:id="@+id/Scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_back"
                android:layout_width="72dp"
                android:layout_height="82px"
                android:layout_marginTop="17dp"
                android:layout_marginRight="155dp"
                android:background="@drawable/back_bt_background"
                android:fontFamily="@font/wemakeprice_regular"
                android:gravity="center"
                android:text="&lt; BACK"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:gravity="center"
                android:text="컵"
                android:textColor="#000000"
                android:textSize="75px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="분리배출 여부"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="60px"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일반쓰레기"
                android:textStyle="bold"
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="#4F3C97"
                android:textAlignment="center"
                android:textSize="73px"
                />

            <TextView
                android:id="@+id/info_tv"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:padding="5px"
                android:text="유리컵(도자기 컵,와인잔,소주잔 등등)은 재활용이 불가능한 품목입니다.따라서 불연성 종량제 봉투에 담아 배출해야 합니다.불연성 종량제 봉투는 주민센터에서 구매 가능합니다."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="56px"
                />
            <TextView
                android:id="@+id/warning_tv2"
                android:layout_marginTop="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:text="※주의사항※\n깨진 컵은 신문지 등으로 감싸 배출해주세요."
                android:fontFamily="@font/wemakeprice_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="50px"
                />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>